"""

print('Enter celcius or fahrenheit: ')
choice = input()
match choice :
    case 'celcius' :
        print('Enter the temp in celcius: ')
        c = float(input())
        f = (c*1.8)+32
        print('Temperature in fahrenheit is: ', f)
    
    case 'fahrenheit' :
        print('Enter the temp in fahrenheit: ')
        f = float(input())
        c = (f-32)*(5/9)
        print("Temperature in celcius is: " , c)
        